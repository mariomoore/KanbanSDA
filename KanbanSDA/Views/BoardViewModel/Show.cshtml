@model KanbanSDA.ViewModels.BoardViewModel

@{
    ViewBag.Title = "Show";
}

<h2>Board: 
@Html.DisplayFor(m => m.Board.Project.Name)</h2>

<p>
    @Html.ActionLink("Add Column", "Create", "Column", new { boardId = Model.Board.Id}, null)
</p>

<div>
    <hr />
    <table class="table-bordered">
        <tr>
            @foreach (var col in Model.ColumnsList)
        {
            <th>
                @Html.DisplayFor(modelItem => col.Name)
            </th>
    }
        </tr>
        <tr>
            @foreach (var col in Model.ColumnsList)
        {
            <td>
                @foreach (var iss in Model.IssuesList)
            {
                <div class="panel-group">
                    @if (iss.ColumnId == col.Id)
                {
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4>
                                @Html.DisplayFor(modelItem => iss.Name)
                            </h4>
                        </div>
                        <div class="panel panel-body">
                            <p>
                                @Html.DisplayFor(modelItem => iss.Description)
                            </p>
                            @Html.ActionLink("Edit", "Edit", "Issue", new { id = iss.Id }, null) |
                            @Html.ActionLink("Details", "Details", "Issue", new { id = iss.Id }, null) |
                            @Html.ActionLink("Delete", "Delete", "Issue", new { id = iss.Id }, null) |
                            @Html.ActionLink("Send to Backlog", "SendToBacklog", new { issueId = iss.Id })
                        </div>
                    </div>
            }
                </div>
        }
            </td>
    }
        </tr>
        <tr>
            @foreach (var col in Model.ColumnsList)
        {
            <td>
                @Html.ActionLink("Edit Column", "Edit", "Column", new { id = col.Id }, null) |
                @Html.ActionLink("Delete Column", "Delete", "Column", new { id = col.Id }, null)
            </td>
    }
        </tr>
    </table>

    <h2>Backlog</h2>
    
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.IssuesList[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.IssuesList[0].Description)
            </th>
            <th>
                Actions
            </th>
        </tr>

        @foreach (var item in Model.IssuesList)
        {
            if (item.ColumnId == null)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Issue", new { id = item.Id }, null) |
                        @Html.ActionLink("Details", "Details", "Issue", new { id = item.Id }, null) |
                        @Html.ActionLink("Delete", "Delete", "Issue", new { id = item.Id }, null)
                    </td>
                </tr>
            }
        }
    </table>
</div>

